@page "/projects"

<PageTitle>Projects - Your Name</PageTitle>

<section class="section">
    <div class="container">
        <h1 style="text-align: center; margin-bottom: 1rem;">My Projects</h1>
        <p style="text-align: center; font-size: 1.125rem; color: #4a5568; max-width: 600px; margin: 0 auto 3rem;">
            A collection of projects showcasing my expertise in software development,
            system administration, and infrastructure management.
        </p>

        <div class="grid grid-2">
            @foreach (var project in projects)
            {
                <div class="card" style="display: flex; flex-direction: column;">
                    <div style="flex: 1;">
                        <h3 class="card-title">@project.Title</h3>
                        <p class="card-description">@project.Description</p>

                        <div style="margin: 1.5rem 0;">
                            <h4 style="font-size: 0.875rem; text-transform: uppercase; color: #718096; margin-bottom: 0.5rem;">
                                Key Features
                            </h4>
                            <ul style="list-style: none; padding: 0;">
                                @foreach (var feature in project.Features)
                                {
                                    <li style="padding: 0.25rem 0; color: #4a5568;">
                                        ✓ @feature
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div>
                        <div class="skills-container">
                            @foreach (var tech in project.Technologies)
                            {
                                <span class="skill-tag">@tech</span>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(project.GithubUrl) || !string.IsNullOrEmpty(project.LiveUrl))
                        {
                            <div style="margin-top: 1.5rem; display: flex; gap: 1rem;">
                                @if (!string.IsNullOrEmpty(project.GithubUrl))
                                {
                                    <a href="@project.GithubUrl" target="_blank" class="btn btn-secondary"
                                       style="font-size: 0.875rem; padding: 0.5rem 1rem;">
                                        View Code
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(project.LiveUrl))
                                {
                                    <a href="@project.LiveUrl" target="_blank" class="btn btn-primary"
                                       style="font-size: 0.875rem; padding: 0.5rem 1rem;">
                                        Live Demo
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="section" style="background: #f7fafc;">
    <div class="container">
        <h2 style="text-align: center; margin-bottom: 3rem;">Open Source Contributions</h2>

        <div class="grid grid-3">
            <div class="card">
                <h3 class="card-title">🔧 Tool Development</h3>
                <p class="card-description">
                    Created service-ping (sping) utility for monitoring service availability.
                    Contributed to various open-source system administration tools and utilities.
                </p>
            </div>

            <div class="card">
                <h3 class="card-title">📚 Documentation</h3>
                <p class="card-description">
                    Regular contributions to technical documentation, including setup guides,
                    API documentation, and troubleshooting resources for various projects.
                </p>
            </div>

            <div class="card">
                <h3 class="card-title">🐛 Bug Fixes</h3>
                <p class="card-description">
                    Active in identifying and fixing bugs in open-source projects,
                    with focus on performance improvements and edge case handling.
                </p>
            </div>
        </div>
    </div>
</section>

