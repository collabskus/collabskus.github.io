@page "/contact"

<PageTitle>Contact - Your Name</PageTitle>

<section class="section">
    <div class="container">
        <h1 style="text-align: center; margin-bottom: 1rem;">Get In Touch</h1>
        <p style="text-align: center; font-size: 1.125rem; color: #4a5568; max-width: 600px; margin: 0 auto 3rem;">
            I'm always interested in hearing about new opportunities and interesting projects.
            Feel free to reach out if you'd like to connect!
        </p>

        <div class="grid grid-2" style="max-width: 1000px; margin: 0 auto;">
            <div>
                <div class="card">
                    <h2 class="card-title">Let's Talk</h2>
                    <p class="card-description">
                        Whether you have a project in mind, need technical consultation, or just want to say hello,
                        I'd love to hear from you. I typically respond within 24-48 hours.
                    </p>

                    <div style="margin-top: 2rem;">
                        <h3 style="font-size: 1.25rem; margin-bottom: 1.5rem;">Contact Information</h3>

                        <div style="margin-bottom: 1.5rem;">
                            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                                <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                     border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                                        <path d="M12 12.713l-11.985-9.713h23.971l-11.986 9.713zm-5.425-1.822l-6.575-5.329v12.501l6.575-7.172zm10.85 0l6.575 7.172v-12.501l-6.575 5.329zm-1.557 1.261l-3.868 3.135-3.868-3.135-8.11 8.848h23.956l-8.11-8.848z" />
                                    </svg>
                                </div>
                                <div>
                                    <div style="font-weight: 600; color: #2d3748;">Email</div>
                                    <a href="mailto:your.email@example.com" style="color: #667eea; text-decoration: none;">
                                        your.email@example.com
                                    </a>
                                </div>
                            </div>

                            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                                <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                     border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                                    </svg>
                                </div>
                                <div>
                                    <div style="font-weight: 600; color: #2d3748;">LinkedIn</div>
                                    <a href="https://linkedin.com/in/yourusername" target="_blank" style="color: #667eea; text-decoration: none;">
                                        linkedin.com/in/yourusername
                                    </a>
                                </div>
                            </div>

                            <div style="display: flex; align-items: center; gap: 1rem;">
                                <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                     border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                    </svg>
                                </div>
                                <div>
                                    <div style="font-weight: 600; color: #2d3748;">GitHub</div>
                                    <a href="https://github.com/yourusername" target="_blank" style="color: #667eea; text-decoration: none;">
                                        github.com/yourusername
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div style="margin-top: 2rem;">
                        <h3 style="font-size: 1.25rem; margin-bottom: 1rem;">Response Time</h3>
                        <p style="color: #4a5568;">
                            I aim to respond to all inquiries within 24-48 hours during business days.
                            For urgent matters, please indicate so in your message subject.
                        </p>
                    </div>
                </div>
            </div>

            <div>
                <div class="card">
                    <h2 class="card-title">Send a Message</h2>

                    <form @onsubmit="HandleSubmit" @onsubmit:preventDefault="true">
                        <div class="form-group">
                            <label class="form-label" for="name">Name</label>
                            <input type="text" id="name" class="form-control" @bind="contactForm.Name"
                                   placeholder="Your Name" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="email">Email</label>
                            <input type="email" id="email" class="form-control" @bind="contactForm.Email"
                                   placeholder="your.email@example.com" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="subject">Subject</label>
                            <input type="text" id="subject" class="form-control" @bind="contactForm.Subject"
                                   placeholder="Project Inquiry" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="message">Message</label>
                            <textarea id="message" class="form-control" @bind="contactForm.Message"
                                      placeholder="Tell me about your project or just say hello..."
                                      rows="6" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary" style="width: 100%;">
                            Send Message
                        </button>
                    </form>

                    @if (showSuccessMessage)
                    {
                        <div style="margin-top: 1rem; padding: 1rem; background: #10b981; color: white;
                                 border-radius: 8px; text-align: center;">
                            Thank you for your message! I'll get back to you soon.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div style="margin-top: 4rem; text-align: center;">
            <h3 style="margin-bottom: 1.5rem;">Connect on Social Media</h3>
            <div style="display: flex; gap: 1.5rem; justify-content: center;">
                <a href="https://github.com/yourusername" target="_blank"
                   style="width: 50px; height: 50px; background: #1a1a1a; border-radius: 50%;
                          display: flex; align-items: center; justify-content: center;
                          color: white; text-decoration: none; transition: transform 0.3s ease;"
                   onmouseover="this.style.transform='translateY(-5px)'"
                   onmouseout="this.style.transform='translateY(0)'">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                </a>

                <a href="https://linkedin.com/in/yourusername" target="_blank"
                   style="width: 50px; height: 50px; background: #0077b5; border-radius: 50%;
                          display: flex; align-items: center; justify-content: center;
                          color: white; text-decoration: none; transition: transform 0.3s ease;"
                   onmouseover="this.style.transform='translateY(-5px)'"
                   onmouseout="this.style.transform='translateY(0)'">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                    </svg>
                </a>

                <a href="https://twitter.com/yourusername" target="_blank"
                   style="width: 50px; height: 50px; background: #1da1f2; border-radius: 50%;
                          display: flex; align-items: center; justify-content: center;
                          color: white; text-decoration: none; transition: transform 0.3s ease;"
                   onmouseover="this.style.transform='translateY(-5px)'"
                   onmouseout="this.style.transform='translateY(0)'">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

@code {
    private ContactFormModel contactForm = new();
    private bool showSuccessMessage = false;

    private class ContactFormModel
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Subject { get; set; } = "";
        public string Message { get; set; } = "";
    }

    private async Task HandleSubmit()
    {
        // In a real application, you would send this to an email service or API
        // For now, we'll just show a success message

        // Simulate API call
        await Task.Delay(500);

        // Show success message
        showSuccessMessage = true;

        // Reset form
        contactForm = new ContactFormModel();

        // Hide success message after 5 seconds
        await Task.Delay(5000);
        showSuccessMessage = false;
    }
}
